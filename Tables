-- create 10 tables

CREATE TABLE Movie(
Movie_Title   varchar(20)   NOT NULL,
Runtime       varchar(4),
Release_Date  varchar(15),
CONSTRAINT movie_PK
  PRIMARY KEY (Movie_Title)
);

CREATE TABLE Staff(
StaffID     varchar(5)    NOT NULL,
First_Name  varchar(20),
Last_Name   varchar(20),
Position    varchar(20),
CONSTRAINT staff_PK
  PRIMARY KEY (StaffID)
);

CREATE TABLE Multiple_Movies(
Movie_Title   varchar(20)           NOT NULL,
StaffID       varchar(5)            NOT NULL,
CONSTRAINT movie_staff_PK
  PRIMARY KEY (Movie_Title, StaffID),
CONSTRAINT movie_FK
  FOREIGN KEY (Movie_Title)
    REFERENCES Movie(Movie_Title),
CONSTRAINT staff_FK
  FOREIGN KEY (StaffID)
    REFERENCES Staff(StaffID)
);

CREATE TABLE Budget(
BudgetID            varchar(5)      NOT NULL,
Movie_Title         varchar(20)     NOT NULL,
Production_Budget   int(7),
Staff_Budget        int(7),
Equip_Budget        int(7),
CONSTRAINT budget_PK
  PRIMARY KEY (BudgetID),
CONSTRAINT movie_budget_PK
  FOREIGN KEY (Movie_Title)
    REFERENCES Movie(Movie_Title)
);

CREATE TABLE Soundtrack (
Track_Number    int(3),
Song_Name       varchar(20)         NOT NULL,
Singer_Name     varchar(20)         NOT NULL,
Composer_Name   varchar(20),
Song_Length     int(5),
CONSTRAINT 
  PRIMARY KEY ,
 CONSTRAINT
);

CREATE TABLE Multiple_Songs(
Movie_Title   varchar(20)       NOT NULL,
TrackNo       int(3)            NOT NULL,
CONSTRAINT movie_song_PK
  PRIMARY KEY (Movie_Title, TrackNo),
CONSTRAINT movie_critic_FK
  FOREIGN KEY (Movie_Title)
    REFERENCES Movie(Movie_Title),
CONSTRAINT soundtrack_FK
  FOREIGN KEY (TrackNo)
    REFERENCES Soundtrack(TrackNo)
);

CREATE TABLE Income (
IncomeID          int(5)      NOT NULL,
Box_Office_Sales  int(15),
DVD_Sales         int(15),
VHS_Sales         int(15),
Digital_Sales     int(15),
Gross_Sales       int(15),
CONSTRAINT
  PRIMARY KEY ,

);

CREATE TABLE Movie_Review (
CriticID      int(5)          NOT NULL,
Critic_Name   varchar(20)      NOT NULL,
Rating        int(5),
Link          varchar(30),
CONSTRAINT
  PRIMARY KEY ,
);

CREATE TABLE Award(
AwardID		varchar(5)	NOT NULL,
Movie_Title	varchar(20)	NOT NULL,
Award_Category	varchar(20),
Award_Date	varchar(15),
Award_Show	varchar(20),
CONSTRAINT award_PK
  PRIMARY KEY (AwardID),
CONSTRAINT movie_award_PK
  FOREIGN KEY (Movie_Title)
    REFERENCES Movie(Movie_Title)
);
